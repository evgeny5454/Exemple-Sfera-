<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="CategoryText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/stroke_color</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/dim18</item>
        <item name="layout_goneMarginEnd">@dimen/dim18</item>
        <item name="android:textColor">@color/subtitle_color</item>
    </style>

    <style name="SmallText2">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/stroke_color</item>
    </style>

    <style name="SmallText3">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="roundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>